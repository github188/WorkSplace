<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/allbg">"
    <!-- android:gravity="center_vertical" -->
    <RelativeLayout 
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="80dip">
        <TextView 
            android:id="@+id/top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dip"
            android:layout_marginTop="20dip"
            android:textColor="@color/black"
            android:textSize="24dip"
            android:layout_alignParentLeft="true"
            android:text="@string/app_name"/>
        <RelativeLayout
            android:id="@+id/top_right"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="50dip"
            android:layout_marginTop="20dip"
            android:layout_alignParentRight="true">
                <TextView 
                    android:id="@+id/top_account_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dip"
                    android:focusable="true"
                    android:visibility="invisible"
                    android:gravity="center_vertical"
                    android:layout_marginRight="40dip"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/button_count"
                    android:text="@string/account_set"/>
                <TextView 
                    android:id="@+id/top_down_record"
                    android:layout_toRightOf="@id/top_account_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="130dip"
                    android:drawablePadding="10dip"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/button_download"
                    android:textColor="@color/black"
                    android:text="@string/downloadmrg_button_txt"/>
        </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/top2"
        android:layout_below="@id/top"
        android:layout_width="fill_parent"
        android:layout_height="97dip">
        <Button 
            android:id="@+id/install"
            android:contentDescription="@string/str_null"
            android:layout_alignParentLeft="true"
            android:background="@drawable/buttonselector"
            android:layout_marginLeft="150dip"
            android:text="@string/installed"
            android:layout_width="97dip"
            android:layout_height="45dip"/>
        <Button 
            android:id="@+id/update"
            android:layout_toRightOf="@id/install"
            android:layout_marginLeft="20dip"
            android:contentDescription="@string/str_null"
            android:background="@drawable/buttonselector"
            android:text="@string/upgrade"
            android:layout_width="97dip"
            android:layout_height="45dip"/>
    </RelativeLayout>
    
    <!-- all apps -->
    <RelativeLayout 
        android:id="@+id/middle"
        android:layout_below="@id/top2"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="100dip"
        android:layout_marginRight="100dip"
        android:layout_width="fill_parent"
        android:layout_height="350dip">
        <ImageButton
            android:id="@+id/left_image"
            android:contentDescription="@string/str_null"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="150dip"
            android:background="@drawable/arrowleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <GridView 
            android:id="@+id/app_grid"
            android:layout_toRightOf="@id/left_image"
            android:layout_marginLeft="30dip"
            android:numColumns="4"
            android:gravity="center"
            android:horizontalSpacing="20dip"
            android:verticalSpacing="10dip"
            android:layout_width="fill_parent"
            android:layout_height="330dip"/>
        <ImageButton 
            android:id="@+id/right_imgae"
            android:contentDescription="@string/str_null"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dip"
            android:background="@drawable/arrowright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/page"
            android:layout_below="@id/middle"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_marginBottom="20dip"
            android:textColor="@color/black"/>
    
</RelativeLayout>
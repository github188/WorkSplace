<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1700dip"
    android:layout_height="600dip"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="1690dip"
        android:layout_height="280dip"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/app_search_store_background"
        android:orientation="horizontal" >

            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="600dip"
                android:layout_height="100dip"
                android:textColor="@color/white"
                android:textSize="40dip"
                android:maxLength="20"
                android:padding="10dip"
                android:singleLine="true"
                android:focusable="true"
                android:background="@drawable/search_edittext" />

            <ImageView
                android:id="@+id/search_button_search"
                android:layout_width="205dip"
                android:layout_height="90dip"
                android:focusable="true"
                android:padding="7dip"
                android:src="@drawable/search_btn"
                android:layout_marginLeft="40dip" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_search_layout_bottom"
        android:layout_width="1700dip"
        android:layout_height="280dip"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <ImageView 
            android:id="@+id/search_all_app"
            android:src="@drawable/app_all"
            android:focusable="true"
            android:layout_width="850dip"
            android:layout_height="270dip"
            android:layout_marginTop="5dip"
            android:padding="10dip"
            android:scaleType="fitXY"
            android:background="@drawable/search_bg"
            android:nextFocusUp="@+id/search_edittext"
            />
        <ImageView 
            android:id="@+id/search_all_queen"
            android:src="@drawable/app_ranking"
            android:focusable="true"
            android:layout_width="850dip"
            android:layout_height="270dip"
            android:layout_marginTop="5dip"
            android:padding="10dip"
            android:scaleType="fitXY"
            android:background="@drawable/search_bg"
            android:layout_marginLeft="5dip"
            android:nextFocusUp="@+id/search_button_search"
            />

    </LinearLayout>

</LinearLayout>
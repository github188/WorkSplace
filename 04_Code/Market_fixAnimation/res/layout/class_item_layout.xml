<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="415dip"
    android:layout_height="260dip"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/class_item_img"
        android:layout_width="415dip"
        android:layout_height="260dip"
        android:focusable="true"
        android:padding="20dip"
        android:scaleType="fitXY"
        android:background="@drawable/frame_animation_list_center"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="375dip"
        android:layout_height="55dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="-77dip"
        android:alpha="0.7"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="12dip"
        android:textColor="@color/white"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="380dip"
        android:layout_height="50dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="25dip"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
          	android:layout_marginLeft="30dip"
            android:textColor="@color/lantingxihei"
            android:textSize="24dip" />

        <ProgressBar
            android:id="@+id/down_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dip"
            android:layout_height="15dip"
            android:layout_marginTop="12dip"
            android:layout_marginLeft="22dip"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_bg"
            android:visibility="gone" />

        <RatingBar
            android:id="@+id/class_rating_bar"
            android:layout_width="125dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:layout_marginLeft="30dip"
            android:isIndicator="false"
            android:numStars="5"
            android:progressDrawable="@drawable/food_rating_bar_full"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/class_item_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dip"
        android:layout_marginTop="-290dip"
        android:alpha="0.9"
        android:gravity="center_vertical"
        android:src="@drawable/pop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pop_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dip"
        android:layout_marginTop="-52dip"
        android:gravity="center_vertical"
        android:src="@drawable/pop_rise"
        android:visibility="gone" />

</LinearLayout>
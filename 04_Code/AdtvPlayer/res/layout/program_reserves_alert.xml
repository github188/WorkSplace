<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="65dip"
        android:background="@color/Transparent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/program_reserve_alert_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/program_reserve_alert_text_dismiss_window_text"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="125dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/program_reserve_alert_background"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dip"
            android:text="@string/program_reserve_alert_text_title"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:background="@color/Transparent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/program_reserve_alert_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/program_reserve_alert_up_selector"
                android:focusable="true" />

            <ImageView
                android:id="@+id/program_reserve_alert_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/program_reserve_alert_down_selector"
                android:focusable="true" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:background="@drawable/program_reserve_alert_clock_image" />
        <!-- 日期 -->

        <TextView
            android:id="@+id/program_reserve_alert_date"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:textColor="@color/white"
            android:textSize="35sp" />
        <!-- 时间 -->

        <TextView
            android:id="@+id/program_reserve_alert_time"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:textColor="@color/white"
            android:textSize="35sp" />
        <!-- 频道 -->

        <TextView
            android:id="@+id/program_reserve_alert_channel_name"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="35sp" />
        <!-- 节目 -->

        <TextView
            android:id="@+id/program_reserve_alert_program_name"
            android:layout_width="350dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <Button
            android:id="@+id/program_reserve_alert_button_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:background="@drawable/program_reserve_alert_button_selector"
            android:focusable="true"
            android:text="@string/program_reserve_alert_watch_button_text"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <Button
            android:id="@+id/program_reserve_alert_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:background="@drawable/program_reserve_alert_button_selector"
            android:focusable="true"
            android:text="@string/program_reserve_alert_cancel_button_text"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </LinearLayout>

</LinearLayout>
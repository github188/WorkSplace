<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/program_reserves_clock_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="18dip"
        android:src="@drawable/program_reserves_list_item_image_clock" />

    <TextView
        android:id="@+id/program_reserves_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="73dip"
        android:layout_marginLeft="30dip"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/program_reserves_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="73dip"
        android:layout_marginLeft="30dip"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/program_reserves_channel_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="73dip"
        android:layout_marginLeft="30dip"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/program_reserves_proram_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="73dip"
        android:layout_marginLeft="30dip"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="35sp" />

</LinearLayout>
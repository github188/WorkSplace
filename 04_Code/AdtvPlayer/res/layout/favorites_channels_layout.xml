<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000">
    
    <RelativeLayout
        android:layout_width="565dip"
        android:layout_height="fill_parent"
        android:background="@drawable/paly_menu_pannel"
        android:layout_centerVertical="true"
        >
        
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dip"
                android:paddingLeft="59dip"
                android:textSize="70sp"
                android:text="@string/favorites_list_open"
                android:textColor="#707896"
                android:id="@+id/favorite_title_text"
                android:focusable="false" 
                />
        
<!--         <LinearLayout -->
<!--             android:id="@+id/titleLinear" -->
<!--             android:layout_width="fill_parent" -->
<!--             android:layout_height="1dip" -->
<!--             android:layout_below="@+id/favorite_title_text" -->
<!--             android:background="@color/white" -->
<!--             > -->
<!--         </LinearLayout> -->
        
        <Button 
            android:id="@+id/favorites_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="130dip"
            android:layout_below="@+id/favorite_title_text"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:background="@drawable/search_btn_selector"
        />
        
        <ListView
            android:id="@+id/favorites_list"
            android:background="#00000000"
            android:cacheColorHint="#00000000"
            android:layout_marginRight="20dip"
            android:layout_below="@+id/favorites_add_button"
            android:layout_marginTop="34dip"
            android:layout_marginLeft="8dip"
            android:layout_width="565dip"
            android:scrollbarThumbVertical="@drawable/scroll_front"
            android:scrollbarTrackVertical="@drawable/scroll_bg"
            android:layout_height="fill_parent"
            android:listSelector="@drawable/listview_selected"
            android:layout_marginBottom="34dip"
            >
        </ListView>
    
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip">
            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginRight="6dip"
                android:layout_gravity="center_vertical"
                android:focusable="false"></ImageView>
            <TextView
                android:id="@+id/help_text_add_delete_favorite"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:focusable="false"></TextView>
            
            <ImageView
                android:id="@+id/help_favorite"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_marginTop="3dip"
                android:layout_width="90dip"
                android:layout_height="36dip"
                android:layout_gravity="center_vertical"
                />
            
            <TextView
                android:id="@+id/help_favorite_list_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingRight="10dip"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textColor="@color/white" />
            
            </LinearLayout>
            
    </RelativeLayout>
    
</RelativeLayout>

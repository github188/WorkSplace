<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/config_bg">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dip"
        android:layout_marginTop="80dip"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/search_left_arrows"
            android:drawablePadding="20dip"
            android:paddingLeft="15dip"
            android:paddingRight="20dip"
            android:background="#202031"
            android:gravity="center_vertical"
            android:alpha="75"
            android:textSize="35sp"
            android:id="@+id/config_system_title"
            android:text="@string/config_system"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginTop="100dip"
        android:layout_marginLeft="380dip"
        android:id="@+id/config_work_time_start"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="@string/config_work_time_start"
            />
        <EditText 
            android:layout_width="71dip"
            android:layout_height="45dip"
            android:padding="8dip"
            android:singleLine="true"
            android:numeric="integer"
            android:maxLength="2"
            android:focusable="false"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dip"
            android:id="@+id/config_work_time_sth_edittext"
            android:background="@drawable/config_min_edittext_selector"
            />
        <Spinner 
            android:id="@+id/config_set_worktime_hour"
            android:layout_width="332dip"
            android:layout_height="65dip"
            android:layout_marginLeft="20dip"
            android:drawSelectorOnTop="true"
            android:background="@drawable/search_spiner_selector"
            android:focusable="true"
            android:textColor="@color/text"
            android:dropDownSelector="@drawable/qam_selected"
            android:popupBackground="#131723"
            android:dropDownVerticalOffset="1dip"
            android:textSize="30sp"
            android:prompt="@string/sixtyfour_qam"
            android:spinnerMode="dropdown"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginLeft="30dip"
            android:text="@string/config_work_time_hour"/>
        <EditText 
            android:layout_width="71dip"
            android:layout_height="45dip"
            android:padding="8dip"
            android:singleLine="true"
            android:maxLength="2"
            android:visibility="gone"
            android:numeric="integer"
            android:focusable="false"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="10dip"
            android:id="@+id/config_work_time_stm_edittext"
            android:background="@drawable/config_min_edittext_selector"
            />
        <Spinner 
            android:id="@+id/config_set_worktime_minute"
            android:layout_width="332dip"
            android:layout_height="65dip"
            android:layout_marginLeft="20dip"
            android:drawSelectorOnTop="true"
            android:background="@drawable/search_spiner_selector"
            android:focusable="true"
            android:textColor="@color/text"
            android:dropDownSelector="@color/blue"
            android:popupBackground="#131723"
            android:dropDownVerticalOffset="1dip"
            android:textSize="30sp"
            android:prompt="@string/sixtyfour_qam"
            android:spinnerMode="dropdown"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginLeft="30dip"
            android:text="@string/config_work_time_minute"/>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="380dip"
        android:id="@+id/config_work_time_end"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="@string/config_work_time_end"
            />
         <Spinner 
            android:id="@+id/config_set_worktime_hour_end"
            android:layout_width="332dip"
            android:layout_height="65dip"
            android:layout_marginLeft="20dip"
            android:drawSelectorOnTop="true"
            android:background="@drawable/search_spiner_selector"
            android:focusable="true"
            android:textColor="@color/text"
            android:dropDownSelector="@color/blue"
            android:popupBackground="#131723"
            android:dropDownVerticalOffset="1dip"
            android:textSize="30sp"
            android:prompt="@string/sixtyfour_qam"
            android:spinnerMode="dropdown"
            />
        <EditText 
            android:layout_width="71dip"
            android:layout_height="45dip"
            android:padding="8dip"
            android:singleLine="true"
            android:numeric="integer"
            android:maxLength="2"
            android:focusable="false"
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="10dip"
            android:id="@+id/config_work_time_enh_edittext"
            android:background="@drawable/config_min_edittext_selector"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginLeft="30dip"
            android:text="@string/config_work_time_hour"/>
         <Spinner 
            android:id="@+id/config_set_worktime_minute_end"
            android:layout_width="332dip"
            android:layout_height="65dip"
            android:layout_marginLeft="20dip"
            android:drawSelectorOnTop="true"
            android:background="@drawable/search_spiner_selector"
            android:focusable="true"
            android:textColor="@color/text"
            android:dropDownSelector="@color/blue"
            android:popupBackground="#131723"
            android:dropDownVerticalOffset="1dip"
            android:textSize="30sp"
            android:prompt="@string/sixtyfour_qam"
            android:spinnerMode="dropdown"
            />
        <EditText 
            android:layout_width="71dip"
            android:layout_height="45dip"
            android:padding="8dip"
            android:singleLine="true"
            android:numeric="integer"
            android:maxLength="2"
            android:focusable="false"
            android:visibility="gone"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="10dip"
            android:id="@+id/config_work_time_enm_edittext"
            android:background="@drawable/config_min_edittext_selector"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginLeft="30dip"
            android:text="@string/config_work_time_minute"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="450dip"
        android:layout_marginTop="90dip"
        android:orientation="horizontal"
        >
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35sp"
        android:text="@string/config_work_time_save_and_back"
        android:textColor="@color/white"
        android:id="@+id/config_work_time_btn_save"
        android:background="@drawable/config_button_save_selector"
        />
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_marginLeft="80dip"
        android:text="@string/config_modify_password_cancel"
        android:textColor="@color/white"
        android:id="@+id/config_work_time_btn_cancel"
        android:background="@drawable/config_button_save_selector"
        />
    
    </LinearLayout>
</LinearLayout>

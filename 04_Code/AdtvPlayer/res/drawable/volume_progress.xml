<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@android:id/background"
        >
        <shape>
            <corners android:radius="8dip" />
            <gradient
                android:startColor="#2a2738"
                android:centerColor="#2a2738"
                android:centerY="0.5"
                android:endColor="#2a2738"
                android:angle="270"
                />
        </shape>
    </item>
    <item
        android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="8dip" />
                <gradient
                    android:endColor="#589cbf"
                    android:centerColor="#0c80af"
                    android:startColor="#529fbf" 
                    android:centerY="0.5"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>

</layer-list>

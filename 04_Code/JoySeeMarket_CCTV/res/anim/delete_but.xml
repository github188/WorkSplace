<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点时 -->
    <item android:drawable="@drawable/public_yellow_button_focus" android:state_focused="true" android:state_pressed="false"/>
    <!-- 获得焦点并按下 -->
    <item android:drawable="@drawable/public_yellow_button_click" android:state_focused="true" android:state_pressed="true"/>
    <!-- 失去焦点时 -->
    <item android:drawable="@drawable/public_normal" android:state_focused="false" android:state_pressed="true"/>
    <!-- 默认时 -->
    <item android:drawable="@drawable/public_normal"/>
 
</selector>
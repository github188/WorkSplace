<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="780dp"
    android:layout_height="93dp"
    android:gravity="left"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="780dp"
        android:layout_height="92dp"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/app_icon"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@drawable/downrecord_icon_selected"
            android:padding="15dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/application_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/install_status_text"
            android:textSize="30sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="86dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="261dp"
            android:background="@anim/delete_but"
            android:text="@string/Uninstall"
            android:textColor="@color/delect_button_text_selector"
            android:textSize="26sp" />
    </LinearLayout>

    <ImageView
        android:alpha="0.1"
        android:layout_marginLeft="15dp"
        android:layout_width="765dp"
        android:layout_height="1dp"
        android:background="@color/lantingxihei" />

</LinearLayout>
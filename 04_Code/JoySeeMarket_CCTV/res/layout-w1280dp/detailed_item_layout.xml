<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dip"
    android:layout_height="206dip"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/item_img"
        android:scaleType="fitXY"
        android:focusable="true"
        android:padding="20dp"
        android:background="@drawable/item_bg"
        android:layout_width="280dip"
        android:layout_height="172dip"
        android:orientation="vertical"
         />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="240dip"
        android:layout_height="47dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="-67dip"
        android:alpha="0.7"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:textColor="@color/install_status_text"
        android:textSize="26dp" />

 

    <ImageView
        android:id="@+id/pop_update"
        android:layout_width="54dp"
        android:layout_height="36dp"
        android:layout_marginLeft="200dip"
        android:layout_marginTop="-148dip"
        android:gravity="center_vertical"
        android:src="@drawable/pop_rise_s"
        android:visibility="gone" />

</LinearLayout>
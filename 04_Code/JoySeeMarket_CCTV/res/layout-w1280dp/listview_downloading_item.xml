<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="780dp"
    android:layout_height="93dp"
    android:gravity="left"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="780dp"
        android:layout_height="92dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/app_icon"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/downrecord_icon_selected"
            android:padding="15dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="420dp"
            android:layout_height="92dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="420dp"
                android:layout_height="33dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/downmgr_item_name"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@color/down_load_text_white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/down_progress_text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="120dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/down_load_text_white"
                    android:textSize="26sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/downmgr_item_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="420dp"
                android:layout_height="7dip"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:focusable="false"
                android:gravity="bottom"
                android:max="100"
                android:progress="40"
                android:progressDrawable="@drawable/play_progressbar" />
        </LinearLayout>

        <Button
            android:id="@+id/pause_start"
            android:layout_width="86dip"
            android:layout_height="44dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:background="@anim/delete_but"
            android:gravity="center"
            android:text="@string/down_pause"
            android:textColor="@color/delect_button_text_selector"
            android:textSize="26dp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="86dip"
            android:layout_height="44dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:background="@anim/delete_but"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/delect_button_text_selector"
            android:textSize="26dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="765dp"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:alpha="0.1"
        android:background="@color/lantingxihei" />

</LinearLayout>
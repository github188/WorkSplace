<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="277dip"
    android:layout_height="59dip"
    android:orientation="horizontal" 
    android:gravity="center"
    android:paddingLeft="13dip"
    android:paddingTop="7dip"
    android:paddingBottom="7dip"
    android:paddingRight="13dip"
    android:background="@drawable/mgr_item_selector">
	
    <TextView
        android:id="@+id/application_id"
        android:layout_width="99dip"
        android:layout_height="wrap_content" 
        android:singleLine="true"
        android:textColor="@color/black"
	   	android:visibility="gone" 
	   	/>
    <ImageView
        android:id="@+id/application_icon"
        android:layout_width="59dip"
        android:layout_height="46dip"
        android:scaleType="fitXY"
         />
    <TextView
        android:id="@+id/application_name"
        android:layout_width="99dip"
        android:layout_height="wrap_content" 
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="13dip"/>
    	<TextView
        android:id="@+id/appliation_pkgname"
        android:layout_width="10dip"
        android:layout_height="wrap_content" 
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="13dip"/>

</LinearLayout>
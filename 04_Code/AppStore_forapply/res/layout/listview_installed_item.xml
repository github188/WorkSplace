<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="82dip"
    android:orientation="horizontal" 
    android:gravity="center"
    android:paddingLeft="10dip"
    android:paddingTop="1dip"
    android:paddingBottom="1dip"
    android:paddingRight="5dip"
    android:background="@drawable/mgr_item_selector">
	
    <TextView
        android:id="@+id/application_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:singleLine="true"
        android:textColor="@color/black"
	   	android:visibility="gone" 
	   	/>
    <ImageButton
        android:id="@+id/app_icon"
        android:padding="10dip"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@anim/record_icon_bg"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/application_name"
        android:layout_width="150dip"
        android:layout_height="wrap_content" 
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:ellipsize="marquee"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="25dip"/>
    	<TextView
        android:id="@+id/appliation_pkgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="20dip"
        android:visibility="gone"/>
    	<Button 
        android:id="@+id/delete"
        android:layout_width="87dip"
        android:layout_height="42dip"
        android:layout_marginLeft="70dip"
        android:textColor="@color/blue"
        android:background="@anim/delete_but"
        android:layout_gravity="center_vertical"
        android:text="@string/delete"/>

</LinearLayout>
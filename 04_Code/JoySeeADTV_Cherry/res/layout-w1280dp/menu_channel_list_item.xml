<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="96dp"
    android:orientation="vertical" >
    <!-- 1080p -->
    <LinearLayout
        android:id="@+id/menu_clitem_channel_info"
        android:layout_width="fill_parent"
        android:layout_height="94dp"
        android:orientation="horizontal" >

        <!-- c = channel -->


          <ImageView
            android:id="@+id/menu_clitem_channel_icon"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dip"
            android:scaleType="fitXY"
             />


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:padding="0dp"
                    android:id="@+id/menu_clitem_channel_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/menu_channel_info"
                    android:textSize="28sp" />

                <TextView
                    android:paddingTop="0dp"
                    android:id="@+id/menu_clitem_channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dip"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:textColor="@color/menu_channel_info"
                    android:textSize="28sp" />
                
            </LinearLayout>

              <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="horizontal" >

                <TextView
                    android:padding="0dp"
                    android:alpha=".4"
                    android:id="@+id/menu_clitem_program_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/menu_list_focus"
                    android:textSize="20sp" />

                <TextView
                    android:padding="0dp"
                    android:alpha=".4"
                    android:id="@+id/menu_clitem_program_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:textColor="@color/menu_list_focus"
                    android:textSize="20sp" />
            </LinearLayout> 
        </LinearLayout>
         <ImageView
            android:layout_marginTop="18dp"
            android:id="@+id/menu_clitem_favorite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_favorite"
            android:visibility="invisible" />
    </LinearLayout>
	
   <LinearLayout
       android:layout_gravity="center_horizontal"
       android:id="@+id/menu_clitem_expand_info"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/menu_clitem_expand_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:src="@drawable/menu_clitem_expand"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/menu_clitem_expand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/white_txt"
            android:textSize="24sp" />
    </LinearLayout>

	<TextView
	    android:visibility="invisible"
       	android:id="@+id/menu_clitem_expand_devide"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#2dffffff" />
<!--    <TextView
       android:id="@+id/menu_clitem_devide"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#33ffffff" /> -->
</LinearLayout>
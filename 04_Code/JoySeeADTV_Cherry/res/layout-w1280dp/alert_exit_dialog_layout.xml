<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/alert_dialog_no_button"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/alert_title" 
        android:layout_width="424dip"
        android:layout_height="57dip"
        android:text="@string/dvb_tv_confirm_exit"
		android:textColor="@color/white_txt"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        />
    
    <Button
        android:id="@+id/alert_confirm_btn"
        android:layout_width="228dip"
        android:layout_height="54dp"
        android:layout_marginLeft="50dip"
        android:layout_marginBottom="13dip"
        android:text="@string/ok"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_gravity="bottom|left"
        />
    
	<Button
        android:id="@+id/alert_cancle_btn"
        android:layout_width="228dip"
        android:layout_height="54dp"
        android:layout_marginRight="61dip"
        android:layout_marginBottom="13dip"
        android:text="@string/alert_dialog_cancel"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_gravity="bottom|right"
        />
</FrameLayout>
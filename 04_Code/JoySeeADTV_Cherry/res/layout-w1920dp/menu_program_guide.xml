<?xml version="1.0" encoding="utf-8"?>
<com.joysee.adtv.ui.MenuProgramGuide xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/channel_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/ivFocus"
            android:layout_width="650dp"
            android:layout_height="90dp"
            android:background="@drawable/focus"
            android:focusable="false"
            android:layout_marginTop="2dp"
            android:focusableInTouchMode="false"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF" />

            <TextView
                android:id="@+id/menu_pg_live_guide_textivew"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="40dp"
                android:background="@color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:text="@string/menu_pg_live_guide"
                android:textColor="@drawable/menu_text_color_selector"
                android:textSize="42sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF" />

            <TextView
                android:id="@+id/menu_pg_week_guide_textivew"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="40dp"
                android:background="@color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:text="@string/menu_pg_week_guide"
                android:textColor="@drawable/menu_text_color_selector"
                android:textSize="42sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF" />
            <include 
                android:id="@+id/recommend_program1"
                android:visibility="invisible"
                layout="@layout/recommend_cell_view"/>
            <include 
                android:visibility="invisible"
                android:id="@+id/recommend_program2"
                layout="@layout/recommend_cell_view"/>
        </LinearLayout>
    </FrameLayout>

</com.joysee.adtv.ui.MenuProgramGuide>
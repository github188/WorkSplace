<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_switch"
    android:layout_width="fill_parent"
    android:layout_height="30dip"
    android:orientation="horizontal" 
    android:layout_marginTop="540dip"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/home_page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dip"
        android:contentDescription="@string/str_null"
        android:gravity="center" />

    <TextView
        android:id="@+id/home_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toLeftOf="@id/home_page1"
        android:contentDescription="@string/str_null"
        android:gravity="center" />

    <TextView
        android:id="@+id/home_page3"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginLeft="5dip"
        android:layout_toLeftOf="@id/home_page2"
        android:contentDescription="@string/str_null"
        android:gravity="center" />

    <TextView
        android:id="@+id/home_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toLeftOf="@id/home_page3"
        android:contentDescription="@string/str_null"
        android:gravity="center" />

    <TextView
        android:id="@+id/home_page5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toLeftOf="@id/home_page4"
        android:contentDescription="@string/str_null"
        android:gravity="center" />

    <ImageView
        android:id="@+id/home_search2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_toLeftOf="@id/home_page5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:background="@drawable/home_search"
        android:contentDescription="@string/str_null"
        android:gravity="center_vertical" />

</RelativeLayout>
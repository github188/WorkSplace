<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="200dip"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/class_item_img"
        android:layout_width="280dip"
        android:layout_height="180dip"
        android:layout_marginTop="5dip"
        android:focusable="true"
        android:padding="14dip"
        android:scaleType="fitXY"
        android:background="@drawable/frame_animation_list_center"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:gravity="left"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/item_price"
            android:layout_width="70dip"
            android:layout_height="30dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="7dip"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <ProgressBar
            android:id="@+id/down_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dip"
            android:layout_height="10dip"
            android:layout_marginTop="7dip"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_bg"
            android:visibility="gone" />

        <RatingBar
            android:id="@+id/class_rating_bar"
            android:layout_width="125dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:isIndicator="false"
            android:numStars="5"
            android:progressDrawable="@drawable/food_rating_bar_full"
            android:visibility="gone" />
    </LinearLayout>
    
    
    <TextView
        android:id="@+id/item_name"
        android:layout_width="251dip"
        android:layout_height="30dip"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="-75dip"
        android:alpha="0.7"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="12dip"
        android:textColor="@color/white"
        android:textSize="18dp" />

    
     <!-- 外设 -->
    <RelativeLayout
        android:layout_width="251dip"
        android:layout_height="30dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="-30dip"
		android:orientation="horizontal"
		>
        <ImageView
	        android:id="@+id/peripherals_c"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_marginRight="60dip"
	        android:layout_alignParentRight="true"
	        android:visibility="gone" />
    	<ImageView 
	        android:id="@+id/peripherals_b"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="30dip"
	        android:visibility="gone" />
	    <ImageView 
	        android:id="@+id/peripherals_a"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:visibility="gone" />
    </RelativeLayout>
    
    <!-- 精品 --> 
    <LinearLayout
        android:id="@+id/boutique_parent"
        android:layout_width="251dip"
        android:layout_height="55dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="-154dip"
        >
        <ImageView 
            android:id="@+id/boutique"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:visibility="gone"
            android:src="@drawable/boutique"
            android:layout_marginLeft="198dip"
            />
    </LinearLayout>
    
    <!-- 气泡 -->
    <ImageView
        android:id="@+id/class_item_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dip"
        android:layout_marginTop="-68dip"
        android:alpha="0.9"
        android:gravity="center_vertical"
        android:src="@drawable/pop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pop_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="188dip"
        android:layout_marginTop="-37dip"
        android:gravity="center_vertical"
        android:src="@drawable/pop_rise"
        android:visibility="gone" />

</LinearLayout>
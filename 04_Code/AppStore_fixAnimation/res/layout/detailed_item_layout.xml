<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="200dip"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="280dip"
        android:layout_height="175dip"
        android:orientation="vertical" 
        android:padding="14dip"
        android:scaleType="fitXY"
        android:focusable="true"
        android:background="@drawable/frame_animation_list_center"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="251dip"
        android:layout_height="30dip"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="-44dip"
        android:alpha="0.7"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="12dip"
        android:textColor="@color/white"
        android:textSize="18dp" />
    
    
    <!-- 外设 -->
    <RelativeLayout
        android:layout_width="251dip"
        android:layout_height="30dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="-30dip"
		android:orientation="horizontal"
		>
        <ImageView
	        android:id="@+id/peripherals_c"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_marginRight="60dip"
	        android:layout_alignParentRight="true"
	        android:visibility="gone" />
    	<ImageView 
	        android:id="@+id/peripherals_b"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="30dip"
	        android:visibility="gone" />
	    <ImageView 
	        android:id="@+id/peripherals_a"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:visibility="gone" />
    </RelativeLayout>
    
    <!-- 精品 --> 
    <LinearLayout
        android:id="@+id/boutique_parent"
        android:layout_width="251dip"
        android:layout_height="55dip"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="-149dip"
        >
        <ImageView 
            android:id="@+id/boutique"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:src="@drawable/boutique"
            android:layout_marginLeft="200dip"
            android:visibility="gone"
            />
    </LinearLayout>
    

    <!-- 气泡 -->
    <ImageView
        android:id="@+id/detail_item_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dip"
        android:layout_marginTop="-68dip"
        android:alpha="0.9"
        android:gravity="center_vertical"
        android:src="@drawable/pop"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/pop_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="188dip"
        android:layout_marginTop="-37dip"
        android:gravity="center_vertical"
        android:src="@drawable/pop_rise"
        android:visibility="visible" />

</LinearLayout>
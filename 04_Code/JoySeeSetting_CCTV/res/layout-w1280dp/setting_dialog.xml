<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/textview_dialog" 
        android:layout_width="660dp"
        android:layout_height="165dp"
		android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        />
    
    <View
        android:id="@+id/divide_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF" 
        android:layout_marginTop="165dp"
        />
    
    <Button
        android:id="@+id/btn_dlg_confirm"
        android:layout_width="202dip"
        android:layout_height="46dip"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="12dp"
        android:text="@string/alert_dialog_ok"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_gravity="bottom|left"
        style="@style/SettingButtonStyle"
        />
    
	<Button
        android:id="@+id/btn_dlg_cancel"
        android:layout_width="202dip"
        android:layout_height="46dip"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="12dp"
        android:text="@string/alert_dialog_cancel"
        android:textSize="22sp"
        android:gravity="center"
		android:textColor="@color/black"
        android:layout_gravity="bottom|right"
        style="@style/SettingButtonStyle"
        />
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical" >

        <TextView
            style="@style/SystemInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:text="@string/hardware_info" />

        <!-- <LinearLayout
            android:layout_width="1115dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#33FFFFFF"
            android:orientation="vertical" >
        </LinearLayout> -->

        <LinearLayout
            android:layout_width="734dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hardware_version" />

                <TextView
                    android:id="@+id/text_hardware_version"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cpu_info" />

                <TextView
                    android:id="@+id/text_cpu_type"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="736dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/System_mac" />

                <TextView
                    android:id="@+id/mac_info"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/memory_name" />

                <TextView
                    android:id="@+id/memory_total"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="736dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#33FFFFFF"
            android:orientation="vertical" >
        </LinearLayout>
        <TextView
            style="@style/SystemInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:text="@string/storage_info" />


        <LinearLayout
            android:layout_width="736dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/memory_flash" />

                <TextView
                    android:id="@+id/memory_flash"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />

                <TextView
                    android:id="@+id/memory_flash_unuse"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/memory_sdcard" />

                <TextView
                    android:id="@+id/memory_sdcard"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />

                <TextView
                    android:id="@+id/memory_sdcard_unuse"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="736dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#33FFFFFF"
            android:orientation="vertical" >
        </LinearLayout>
        <TextView
            style="@style/SystemInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:text="@string/sofeware_version" />


        <LinearLayout
            android:layout_width="736dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/android_version" />

                <TextView
                    android:id="@+id/android_version"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heart_version" />

                <TextView
                    android:id="@+id/heart_version"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="736dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#33FFFFFF"
            android:orientation="vertical" >
        </LinearLayout>
        <TextView
            style="@style/SystemInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:text="@string/joysee_version" />


        <LinearLayout
            android:layout_width="736dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/joysee_sofware_version" />

                <TextView
                    android:id="@+id/joysee_sofware_version"
                    style="@style/SystemInfoSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="736dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#33FFFFFF"
            android:orientation="vertical" >
        </LinearLayout>
        <TextView
            style="@style/SystemInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:text="@string/System_low" />


        <Button
            android:id="@+id/btn_opensource"
            style="@style/SettingButtonStyle"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="@string/System_low_license" >
        </Button>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/toastLayout"
        android:layout_width="752dp"
        android:layout_height="114dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:background="@drawable/dlg_bg"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/toastLicenseImage"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:background="@anim/loading"
            android:visibility="visible" />
        <TextView
            android:id="@+id/toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/toastLicenseImage"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:singleLine="true"
            android:textColor="#bbbbbb"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/licensLayout"
        android:layout_width="713dp"
        android:layout_height="416dp"
        android:layout_centerVertical="true"
        android:background="@drawable/dlg_big_bg"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="23dp"
            android:singleLine="true"
            android:text="@string/System_low_license"
            android:textColor="#7a819e"
            android:textSize="33sp" >
        </TextView>

        <TextView
            android:id="@+id/textViewLicens"
            android:layout_width="726dp"
            android:layout_height="284dp"
            android:layout_alignLeft="@+id/textview_title"
            android:layout_below="@+id/textview_title"
            android:layout_marginTop="26dp"
            android:focusable="true"
            android:lineSpacingExtra="8dp"
            android:maxLines="200"
            android:paddingRight="20dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="575dp"
    android:layout_height="635dp" >

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="60dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/yellow"
        android:textSize="28sp" >
    </TextView>

    <View
        android:id="@+id/divide_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textview_title"
        android:background="#33FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/textview_title"
        android:layout_below="@id/divide_line"
        android:layout_marginBottom="38dp"
        android:layout_marginTop="68dp"
        android:lineSpacingExtra="15dp"
        android:maxLines="200"
        android:paddingRight="30dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/progress_focus_v"
        android:scrollbarTrackVertical="@drawable/progress_normal_v"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textSize="20sp" />

</RelativeLayout>

<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SettingButtonStyle">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="searchDownListTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@color/Transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/Transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <!-- <item name="android:windowBackground">@color/transparent</item> -->
    </style>

    <style name="TextStyle">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SystemInfoTextStyle">
        <item name="android:textSize">34dp</item>
        <item name="android:textColor">#ff9138</item>
    </style>

    <style name="SystemInfoSmallTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#dedede</item>
    </style>

    <style name="DropdownArrowSmall">
        <item name="android:background">@drawable/search_spiner_selector</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="DropdownArrowLarger">
        <item name="android:background">@drawable/search_spiner_selector_larger</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="net_proxy_edit_text">
        <item name="android:background">@drawable/netproxy_edittext_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TextSelectStyle">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@drawable/default_text_color</item>
    </style>

    <style name="LongEditTextStyle">
        <item name="android:background">@drawable/config_edittext_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:textSize">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/config_edittext_selector</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:textSize">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="SmallEditTextStyle">
        <item name="android:background">@drawable/edittext_selector_normal</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:textSize">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="MiddleDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/public_dialog_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="DialogTextViewStyle">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="DialogTextViewStyleWhite">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="config_text_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@drawable/public_dialog_bg</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/public_dialog_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>
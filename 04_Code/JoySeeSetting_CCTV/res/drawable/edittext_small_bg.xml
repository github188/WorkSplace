<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->  
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/edittext_small_focus" />  
    <!-- Focused states -->  
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/edittext_small_focus" />  
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/edittext_small_focus" />  
    <!-- Pressed -->  
    <item android:state_pressed="true" android:drawable="@drawable/edittext_small_focus"/>  
    <item android:color="#50000000"/> 
</selector>  
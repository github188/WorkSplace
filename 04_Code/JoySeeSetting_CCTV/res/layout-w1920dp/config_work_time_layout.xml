<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1115dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="68dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/config_system_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:gravity="center_vertical"
        android:text="@string/config_system_worktime"
        android:textColor="@color/yellow"
        android:textSize="34sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:text="@string/config_work_time_start"
        android:textColor="@color/yellow"
        android:textSize="34sp" />

    <LinearLayout
        android:id="@+id/config_work_time_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/config_set_worktime_hour"
            android:layout_width="412dp"
            android:layout_height="117dp"
            android:background="@drawable/search_spiner_selector"
            android:drawSelectorOnTop="true"
            android:dropDownSelector="@color/yellow"
            android:dropDownVerticalOffset="1dip"
            android:dropDownWidth="352dp"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:popupBackground="@drawable/search_down_list_bg"
            android:spinnerMode="dropdown"
            android:textColor="@color/grey"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config_work_time_hour"
            android:textSize="34sp" />

        <Spinner
            android:id="@+id/config_set_worktime_minute"
            android:layout_width="412dp"
            android:layout_height="117dp"
            android:background="@drawable/search_spiner_selector"
            android:drawSelectorOnTop="true"
            android:dropDownSelector="@color/yellow"
            android:dropDownVerticalOffset="1dip"
            android:dropDownWidth="352dp"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:popupBackground="@drawable/search_down_list_bg"
            android:spinnerMode="dropdown"
            android:textColor="@color/grey"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config_work_time_minute"
            android:textSize="34sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:text="@string/config_work_time_end"
        android:textColor="@color/yellow"
        android:textSize="34sp" />

    <LinearLayout
        android:id="@+id/config_work_time_end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/config_set_worktime_hour_end"
            android:layout_width="412dp"
            android:layout_height="117dp"
            android:background="@drawable/search_spiner_selector"
            android:drawSelectorOnTop="true"
            android:dropDownSelector="@color/yellow"
            android:dropDownVerticalOffset="1dip"
            android:dropDownWidth="352dp"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:popupBackground="@drawable/search_down_list_bg"
            android:spinnerMode="dropdown"
            android:textColor="@color/grey"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config_work_time_hour"
            android:textSize="34sp" />

        <Spinner
            android:id="@+id/config_set_worktime_minute_end"
            android:layout_width="412dp"
            android:layout_height="117dp"
            android:background="@drawable/search_spiner_selector"
            android:drawSelectorOnTop="true"
            android:dropDownSelector="@color/yellow"
            android:dropDownVerticalOffset="1dip"
            android:dropDownWidth="352dp"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:popupBackground="@drawable/search_down_list_bg"
            android:spinnerMode="dropdown"
            android:textColor="@color/text"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config_work_time_minute"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="450dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/config_work_time_btn_save"
            style="@style/SettingButtonStyle"
            android:layout_width="303dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="@string/config_work_time_save_and_back" >
        </Button>

        <Button
            android:id="@+id/config_work_time_btn_cancel"
            style="@style/SettingButtonStyle"
            android:layout_width="303dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dip"
            android:gravity="center"
            android:text="@string/config_modify_password_cancel" />
    </LinearLayout>

</LinearLayout>
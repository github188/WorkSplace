<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="68dip"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/config_system_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:drawablePadding="20dip"
        android:paddingLeft="15dip"
        android:paddingRight="20dip"
        android:text="@string/config_system"
        android:textColor="@color/yellow"
        android:textSize="34sp" >
    </TextView>

    <LinearLayout
        android:id="@+id/config_work_time_layout"
        android:layout_width="1115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_system_title"
        android:layout_below="@id/config_system_title"
        android:layout_marginTop="40dip"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@color/divider_color" />

        <TextView
            android:id="@+id/config_work_time"
            android:layout_width="fill_parent"
            android:layout_height="85dip"
            android:background="@drawable/text_selector"
            android:drawableRight="@drawable/right_arrows_selector"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:text="@string/config_work_time"
            android:textColor="@color/grey"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/config_watch_level_layout"
        android:layout_width="1115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_system_title"
        android:layout_below="@id/config_work_time_layout"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@color/divider_color" />

        <TextView
            android:id="@+id/config_watch_level"
            android:layout_width="fill_parent"
            android:layout_height="85dip"
            android:background="@drawable/text_selector"
            android:drawableRight="@drawable/right_arrows_selector"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:text="@string/config_watch_level"
            android:textColor="@color/grey"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/config_authorise_message_layout"
        android:layout_width="1115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_system_title"
        android:layout_below="@id/config_watch_level_layout"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@color/divider_color" />

        <TextView
            android:id="@+id/config_authorise_message"
            android:layout_width="fill_parent"
            android:layout_height="85dip"
            android:background="@drawable/text_selector"
            android:drawableRight="@drawable/right_arrows_selector"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:text="@string/config_authorise_message"
            android:textColor="@color/grey"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/config_modify_password_layout"
        android:layout_width="1115dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_system_title"
        android:layout_below="@id/config_authorise_message_layout"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@color/divider_color" />

        <TextView
            android:id="@+id/config_modify_password"
            android:layout_width="fill_parent"
            android:layout_height="85dip"
            android:background="@drawable/text_selector"
            android:drawableRight="@drawable/right_arrows_selector"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:text="@string/config_modify_password"
            android:textColor="@color/grey"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@color/divider_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_system_title"
        android:layout_below="@id/config_modify_password_layout"
        android:layout_marginTop="400dip"
        android:orientation="horizontal"
        android:paddingLeft="50dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:text="@string/config_card_number"
            android:textColor="@color/grey"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/config_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:textColor="@color/grey"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>
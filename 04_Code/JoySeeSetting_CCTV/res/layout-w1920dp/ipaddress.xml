<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusLeft="@+id/editText1"
        android:nextFocusRight="@+id/editText2"
        android:textColor="@color/yellow"
        android:textSize="34sp" >
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="@string/address_point"
        android:textSize="34sp" >
    </TextView>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusLeft="@+id/editText1"
        android:nextFocusRight="@+id/editText3"
        android:textColor="@color/yellow"
        android:textSize="34sp" >
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="@string/address_point"
        android:textSize="34sp" >
    </TextView>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusLeft="@+id/editText2"
        android:nextFocusRight="@+id/editText4"
        android:textColor="@color/yellow"
        android:textSize="34sp" >
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="@string/address_point"
        android:textSize="34sp" >
    </TextView>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusLeft="@+id/editText3"
        android:nextFocusRight="@+id/editText4"
        android:textColor="@color/yellow"
        android:textSize="34sp" >
    </EditText>

</LinearLayout>
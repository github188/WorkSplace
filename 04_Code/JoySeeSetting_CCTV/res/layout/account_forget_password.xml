<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
<LinearLayout
 	android:orientation="vertical"
 	android:layout_marginLeft="80dp"
 	android:layout_marginTop="89dp"
 	android:layout_width="fill_parent" android:layout_height="fill_parent">
	
    <LinearLayout android:id="@+id/eth_back"
        android:layout_width="223dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:background="#2E242D"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@drawable/search_left_arrows" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            style="@style/BackTextStyle"
            android:text="@string/Account_find_password" /> 
    </LinearLayout>
    
	<LinearLayout android:layout_height="fill_parent" android:layout_width="match_parent" 
 		android:orientation="horizontal">
		<LinearLayout android:layout_height="match_parent" android:layout_width="280dp" 
			android:layout_marginTop="45dp"
	 		android:orientation="vertical">
		  	<TextView android:layout_width="wrap_content"
	       			android:layout_height="100dp"	       			
		  	        style="@style/TextStyle"
		  	        android:text="@string/Account_regist_name" />
	       	<TextView android:layout_width="wrap_content"
	       			android:layout_height="100dp"
	       			android:layout_marginTop="30dp"
		  	        style="@style/TextStyle"
		  	        android:text="@string/Account_verification_code" />
		</LinearLayout>
		<LinearLayout android:layout_height="match_parent" android:layout_width="wrap_content" 
 			android:layout_marginTop="40dp" android:orientation="vertical">
	  		<LinearLayout android:layout_height="60dp" android:layout_width="wrap_content" 
	  			android:orientation="horizontal">
		       	<EditText android:id="@+id/registerName" android:layout_height="60dp" 
		       			style="@style/LongEditTextStyle"
		       			android:hint="@string/Account_name_hint"
		       			android:singleLine="true"
		       			android:layout_width="650dp" >
		       	</EditText>	
	  			<ImageView android:layout_height="40dp" android:id="@+id/imgRegistName" 
	  				android:layout_width="40dp" 	  				
					android:layout_marginLeft="30dp" android:layout_marginTop="10dp"	>
	  			</ImageView>
	  			<!-- <TextView android:layout_width="wrap_content"
		  	        style="@style/TextSmallStyle"      			
	       			android:layout_marginTop="10dp"
	       			android:layout_marginLeft="30dp"
	       			android:id="@+id/textName"
	       			android:layout_height="wrap_content" /> -->
	       	</LinearLayout>
	  		 <LinearLayout android:layout_height="40dp" android:layout_width="wrap_content" 
	  			android:orientation="vertical">
	   			<TextView android:layout_width="600dp"
		  	        style="@style/TextSmallStyle"      			
	       			android:layout_marginTop="5dp"
	       			android:id="@+id/textName"
	       			android:layout_height="wrap_content" />
	       	</LinearLayout> 
	  		<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"  
	  		    android:layout_marginTop="30dp"
	  			android:orientation="horizontal">
		       	<EditText android:id="@+id/verification_code" android:layout_height="60dp" 
		       			style="@style/EditTextStyle"
		       			android:singleLine="true"
		       			android:layout_width="200dp" >
		       	</EditText>

		       	<LinearLayout
		       	    android:id="@+id/linearLayout1"
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="match_parent"
		       	    android:orientation="vertical" >
	
		  			<ImageView android:layout_height="40dp" android:id="@+id/img_verify" 
		  				android:layout_width="80dp" 
		  				android:background="@drawable/bg_verify"   
						android:layout_marginLeft="30dp"		
				  		android:layout_marginTop="12dp">
		  			</ImageView>
		       	</LinearLayout>
			  	<!-- <Button android:id="@+id/btn_refurbish" 
			  		android:layout_width="150dp" android:layout_height="60dp"
			  		android:text="@string/Account_refurbish"  
			  		style="@style/ButtonStyle"    
					android:layout_marginLeft="70dp">
			  	</Button> -->
			  	<!--  <LinearLayout android:id="@+id/btn_refurbish" 
			  	    android:layout_width="wrap_content" android:layout_height="wrap_content"
			  	    android:focusable="true"
			  	    android:clickable="true"
			  	    android:layout_marginLeft="50dp"
			  	    android:orientation="horizontal">-->
			  	    <ImageView  android:id="@+id/btn_refurbish" 
			  	        android:layout_width="100dp" 
			  	        android:layout_height="60dp"
			  	        android:focusable="true"
			  	   		android:clickable="true"
			  	   		android:layout_marginLeft="50dp"
			  	   		android:src="@drawable/refresh"/>
			  	</LinearLayout>
	       	<!--  </LinearLayout>-->
	  		 <LinearLayout android:layout_height="40dp" android:layout_width="wrap_content" 
	  			android:orientation="vertical">
	       		<TextView android:layout_width="wrap_content"	
	       			android:id="@+id/textVerify"
		  	        style="@style/TextSmallStyle"      		
	       			android:layout_height="wrap_content" />	 
	       	</LinearLayout> 
			<Button android:id="@+id/btn_send_password" 
			  		android:layout_width="@dimen/MiddleButtonWidth" 
			  		android:layout_height="@dimen/MiddleButtonHeight"
			  		android:text="@string/account_send_password"  
			  		style="@style/SettingButtonStyle"    		
				  	android:layout_marginTop="40dp"
					android:layout_marginLeft="170dp">
			</Button>
			<Button android:id="@+id/btn_return" 
			  		android:layout_width="@dimen/MiddleButtonWidth" 
			  		android:layout_height="@dimen/MiddleButtonHeight"
			  		android:text="@string/account_return" 		
				  	android:layout_marginTop="40dp"
			  		style="@style/SettingButtonStyle"  
					android:layout_marginLeft="170dp">
			</Button>
		</LinearLayout>
	</LinearLayout>
 
</LinearLayout>

<RelativeLayout
	android:layout_height="172dp" 
	android:layout_width="1140dp"
	android:layout_centerVertical="true"
	android:background="@drawable/dlg_bg"
	android:gravity="center"
	android:id="@+id/toastLayout"
	android:visibility="invisible"
>  

	<ImageView
	    android:id="@+id/toastImage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@anim/loading"
	    android:visibility="visible"
	/>    
	<TextView    
		android:id="@+id/toast_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"   
	    android:layout_toRightOf="@id/toastImage"  
	    android:layout_marginLeft="10dp"
	    android:textColor="#bbbbbb"
	    android:textSize="35dp"       
	    android:singleLine="true"    
	    android:gravity="center"    
	/>

</RelativeLayout>
    

</RelativeLayout>
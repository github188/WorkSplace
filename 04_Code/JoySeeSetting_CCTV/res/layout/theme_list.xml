<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:orientation="vertical"
 	android:layout_width="match_parent" 
 	 android:layout_height="match_parent">
 	
    <LinearLayout android:layout_width="308dp" 
 		android:layout_height="308dp" 
  		android:id="@+id/themeLayout"
    	android:background="@drawable/theme_item_bg"
  		android:orientation="vertical">
 	
 	    <ImageView android:id="@+id/theme_imag"
 	        android:layout_width="272dp"
 	        android:layout_height="183dp"
 	        android:layout_marginTop="26dp"
 	        android:layout_marginLeft="5dp"/>
 	    <LinearLayout
		 	android:orientation="horizontal"
		 	android:layout_width="fill_parent" 
		 	android:layout_height="wrap_content"
		 	android:layout_marginTop="26dp"
		 	android:layout_marginLeft="30dp">
 	        
	 	    <ImageView android:id="@+id/theme_msg"  
	 	        android:layout_width="28dp" 
	 	        android:layout_height="28dp"
	 	        android:layout_marginLeft="12dp"
	 	        android:layout_gravity="center_vertical"
				android:src="@drawable/sel_icon"
			 	/>
<!-- 			 	android:layout_marginLeft="28dp" -->
 	        <TextView android:id="@+id/theme_title" 
	 	        android:layout_width="150dp " 
			 	android:textSize="35dp"
			 	android:singleLine="true"
			 	android:ellipsize="marquee" 
			 	android:gravity="center_horizontal"
			 	android:layout_gravity="center_horizontal"
				android:marqueeRepeatLimit="marquee_forever"
			 	android:layout_height="wrap_content"/>
 	    
 	    </LinearLayout>
 	    </LinearLayout>
 	
</LinearLayout>            


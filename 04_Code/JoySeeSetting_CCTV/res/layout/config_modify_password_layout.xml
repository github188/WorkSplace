<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/config_modify_password_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="45dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/config_titel_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="45dp"
        android:text="@string/config_system_modifypassword"
        android:textColor="@color/yellow"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="45dp"
        android:text="@string/config_modify_password_old"
        android:textColor="@color/yellow"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/config_modify_password_edit_old"
        android:layout_width="515dp"
        android:layout_height="100dp"
        android:background="@drawable/password_edittext_selector"
        android:longClickable="false"
        android:maxLength="6"
        android:layout_marginLeft="20dp"
        android:numeric="integer"
        android:paddingLeft="35dp"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/yellow"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_modify_password_new"
        android:textColor="@color/yellow"
        android:layout_marginLeft="45dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/config_modify_password_edit_new"
        android:layout_width="515dp"
        android:layout_height="100dp"
        android:background="@drawable/password_edittext_selector"
        android:longClickable="false"
        android:maxLength="6"
        android:layout_marginLeft="20dp"
        android:numeric="integer"
        android:paddingLeft="35dp"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/yellow"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_modify_password_new_confirm"
        android:textColor="@color/yellow"
        android:layout_marginLeft="45dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/config_modify_password_edit_new_confirm"
        android:layout_width="515dp"
        android:layout_height="100dp"
        android:background="@drawable/password_edittext_selector"
        android:longClickable="false"
        android:maxLength="6"
        android:layout_marginLeft="20dp"
        android:numeric="integer"
        android:paddingLeft="35dp"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/yellow"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="90dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/config_modify_password_save"
            style="@style/SettingButtonStyle"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/config_work_time_save_and_back" />

        <Button
            android:id="@+id/config_modify_password_cancel"
            style="@style/SettingButtonStyle"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="@string/config_modify_password_cancel" />
    </LinearLayout>

</LinearLayout>
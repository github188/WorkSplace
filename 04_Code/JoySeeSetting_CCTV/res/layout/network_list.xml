<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:orientation="horizontal"
 	android:layout_marginLeft="100dp"
 	android:layout_marginTop="204dp"
 	android:id="@+id/networkLayout"
 	android:background="@drawable/listview_item_bg"
 	android:layout_width="900dp" 
 	android:layout_height="91dp">
 	
 	    <TextView android:id="@+id/network_list_name" 
 	        android:layout_width="240dp" 
		 	android:textSize="30dp"
		 	android:paddingLeft="50dp"
		 	android:gravity="center_vertical"
		 	android:layout_centerVertical="true"
		 	android:layout_height="wrap_content"/>
 	    
 	    <TextView android:id="@+id/network_list_state"  
 	        android:layout_width="200dp" 
 	        android:textSize="30dp"
 	        android:paddingLeft="50dp"
		 	android:layout_centerVertical="true"
		 	android:layout_toRightOf="@id/network_list_name"
		 	android:layout_height="wrap_content"/>
 	    
 	    <TextView android:id="@+id/network_list_more"  
 	        android:layout_width="wrap_content" 
 	        android:textSize="30dp"
 	        android:layout_marginLeft="420dp"
		 	android:layout_centerVertical="true"
		 	android:layout_toRightOf="@id/network_list_state"
		 	android:layout_height="wrap_content"/>
 	
</RelativeLayout>            
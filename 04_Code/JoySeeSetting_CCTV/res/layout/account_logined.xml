<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:orientation="vertical"
 	android:layout_width="fill_parent" android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
       	android:background="@drawable/login_bg"
        android:layout_width="970dp"
        android:layout_height="249dp"
       	android:layout_marginLeft="150dp"
       	android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:gravity="center_vertical" >

	<TextView android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:id="@+id/textLogLogin"
       	android:textSize="60dp"       	
       	android:gravity="center_horizontal|center_vertical"
	  	style="@style/TextStyle"/>
    </LinearLayout>
	<Button android:id="@+id/btn_logout" 
	  	android:layout_width="@dimen/MiddleButtonWidth" android:layout_height="@dimen/MiddleButtonHeight" 
		android:layout_marginLeft="515dp"		
       	android:layout_marginTop="80dp"
	  	style="@style/SettingButtonStyle"   
	  	android:text="@string/Account_logout">
	</Button>
	<Button android:id="@+id/btn_modify_password" 
	  	android:layout_width="@dimen/MiddleButtonWidth" android:layout_height="@dimen/MiddleButtonHeight"
	  	android:text="@string/Account_modify_password"  
	  	style="@style/SettingButtonStyle"    
		android:layout_marginLeft="515dp"		
	  	android:layout_marginTop="30dp">
	 </Button>	
 
</LinearLayout>

<RelativeLayout
        android:id="@+id/toastLayout"
        android:layout_width="1140dp"
        android:layout_height="172dp"
        android:layout_centerVertical="true"
        android:background="@drawable/dlg_bg"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textColor="#bbbbbb"
            android:textSize="35dp" />

        <ImageView
            android:id="@+id/toastImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/toast_text"
            android:background="@anim/loading"
            android:baselineAlignBottom="true"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>


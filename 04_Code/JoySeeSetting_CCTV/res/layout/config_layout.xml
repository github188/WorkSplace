<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bk_ground"
    android:id="@+id/ca_set_bg">
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="360dip"
        android:layout_marginTop="130dip"
        android:drawableLeft="@drawable/search_left_arrows"
        android:textColor="@color/white"
        android:drawablePadding="20dip"
        android:paddingLeft="15dip"
        android:paddingRight="20dip"
        android:background="#202031"
        android:textSize="35sp"
        android:id="@+id/config_system_title"
        android:text="@string/config_system"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dip"
        android:id="@+id/config_work_time_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        
        <Button 
            android:layout_width="1200dip"
            android:layout_height="100dip"
            android:id="@+id/config_work_time"
            android:text="@string/config_work_time"
            android:paddingLeft="40dip"
            android:textSize="35sp"
            android:drawableRight="@drawable/search_right_arrows"
            android:paddingRight="40dip"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:background="@drawable/text_selector"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_below="@id/config_work_time_layout"
        android:layout_gravity="center_horizontal"
        android:id="@+id/config_watch_level_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        
        <Button 
            android:layout_width="1200dip"
            android:layout_height="100dip"
            android:text="@string/config_watch_level"
            android:paddingLeft="40dip"
            android:textSize="35sp"
            android:drawableRight="@drawable/search_right_arrows"
            android:paddingRight="40dip"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/config_watch_level"
            android:background="@drawable/text_selector"
        />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_below="@id/config_watch_level_layout"
        android:layout_gravity="center_horizontal"
        android:id="@+id/config_authorise_message_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        
        <Button 
            android:layout_width="1200dip"
            android:layout_height="100dip"
            android:text="@string/config_authorise_message"
            android:paddingLeft="40dip"
            android:textSize="35sp"
            android:drawableRight="@drawable/search_right_arrows"
            android:paddingRight="40dip"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/config_authorise_message"
            android:background="@drawable/text_selector"
        />
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_below="@id/config_authorise_message_layout"
        android:id="@+id/config_modify_password_layout"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
        <Button 
            android:layout_width="1200dip"
            android:layout_height="100dip"
            android:text="@string/config_modify_password"
            android:paddingLeft="40dip"
            android:drawableRight="@drawable/search_right_arrows"
            android:paddingRight="40dip"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/config_modify_password"
            android:background="@drawable/text_selector"
        />
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dip"
        android:layout_below="@id/config_modify_password_layout"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dip"
            android:layout_marginTop="30dip"
            android:textSize="35sp"
            android:text="@string/config_card_number"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="30dip"
            android:textSize="35sp"
            android:id="@+id/config_card_number"
            />
    </LinearLayout>
    
    
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:layout_width="fill_parent" android:layout_height="fill_parent"
 	 >
<LinearLayout
 	android:orientation="vertical"
 	android:layout_marginLeft="80dp"
 	android:layout_marginTop="89dp"
 	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/eth_back"
	        android:layout_width="270dp"
	        android:layout_height="57dp"
	        android:layout_marginTop="10dp"
	        android:background="#2E242D"
	        android:orientation="horizontal">

	        <ImageView
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="12dp"
	            android:src="@drawable/search_left_arrows" />

	         <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:layout_gravity="center_vertical"
	            style="@style/BackTextStyle"
	            android:text="@string/Account_register_new" /> 
    	</LinearLayout>
    	
	<LinearLayout android:layout_height="fill_parent" android:layout_width="match_parent" 
	    android:layout_marginTop="50dp"
 		android:orientation="horizontal">
		<LinearLayout android:layout_height="match_parent" android:layout_width="280dp" 
			android:layout_marginTop="20dp"
	 		android:orientation="vertical">
		  	<TextView android:layout_width="wrap_content"
	       			android:layout_height="100dp"	       			
		  	        style="@style/TextStyle"
		  	        android:text="@string/Account_regist_name" />
	       	<TextView android:layout_width="wrap_content"
	       			android:layout_height="100dp"
		  	        style="@style/TextStyle"
		  	        android:text="@string/Account_regist_password" />
		  	<TextView android:layout_width="wrap_content"
	       			android:layout_height="100dp"
		  	        style="@style/TextStyle"
		  	        android:text="@string/Account_confirm_password" />
	       	<TextView android:layout_width="wrap_content"
	       			android:layout_height="100dp"
		  	        style="@style/TextStyle"
		  	        android:text="@string/Account_verification_code" />
	  		<CheckBox android:text="@string/Account_checkbox_confirm" android:id="@+id/checkBoxConfirm" 
	  				android:layout_width="wrap_content" android:layout_height="wrap_content"	
	  				style="@style/CheckboxStyle">
	  		</CheckBox>
	  		
		</LinearLayout>
		<LinearLayout android:layout_height="match_parent" android:layout_width="wrap_content" 
 			android:layout_marginTop="20dp" android:orientation="vertical">
	  		<LinearLayout android:layout_height="60dp" android:layout_width="wrap_content" 
	  			android:orientation="horizontal">
		       	<EditText android:id="@+id/registerName" android:layout_height="60dp" 
		       			style="@style/LongEditTextStyle"
		       			android:hint="@string/Account_name_hint"
		       			android:longClickable="false"
		       			android:singleLine="true"
		       			android:layout_width="600dp" >
		       	</EditText>	
	  			<ImageView android:layout_height="40dp" android:id="@+id/imgRegistName" 
	  				android:layout_width="40dp" 	  				
					android:layout_marginLeft="30dp" android:layout_marginTop="10dp"	>
	  			</ImageView>
	       	</LinearLayout>
	  		<LinearLayout android:layout_height="40dp" android:layout_width="wrap_content" 
	  			android:orientation="vertical">
	   			<TextView android:layout_width="600dp"
		  	        style="@style/TextSmallStyle"      			
	       			android:layout_marginTop="5dp"
	       			android:id="@+id/textName"
	       			android:layout_height="wrap_content" />
	       	</LinearLayout>
	       	<EditText android:id="@+id/registerPassword" android:layout_height="60dp"  
	       			style="@style/LongEditTextStyle" 
		       		android:hint="@string/Account_password_hint"
		       		android:longClickable="false"
		       		android:singleLine="true"
	       			android:password="true"	
	       			android:layout_width="600dp">
	       	</EditText>	
	  		<LinearLayout android:layout_height="40dp" android:layout_width="wrap_content" 
	  			android:orientation="vertical">
	       		<TextView android:layout_width="600dp"	
	       			android:layout_marginTop="5dp"
	       			android:id="@+id/textPassword"
		  	        style="@style/TextSmallStyle"      		
	       			android:layout_height="wrap_content" />	 
	       	</LinearLayout>
	       	<EditText android:id="@+id/registerConfirmPassword" android:layout_height="60dp"  
	       			style="@style/LongEditTextStyle" 
	       			android:longClickable="false"
	       			android:password="true"
		       		android:singleLine="true"
	       			android:layout_width="600dp">
	       	</EditText>	
	  		<LinearLayout android:layout_height="40dp" android:layout_width="wrap_content" 
	  			android:orientation="vertical">
	       		<TextView android:layout_width="wrap_content"	
	       			android:layout_marginTop="5dp"
	       			android:id="@+id/textPasswordConfirm"
		  	        style="@style/TextSmallStyle"      		
	       			android:layout_height="wrap_content" />	 
	       	</LinearLayout>
	  		<LinearLayout android:layout_height="67dp" android:layout_width="wrap_content"  
	  			android:orientation="horizontal">
		       	<EditText android:id="@+id/verification_code" android:layout_height="60dp" 
		       			style="@style/EditTextStyle"
		       			android:longClickable="false"
		       			android:singleLine="true"
		       			android:layout_width="200dp" >
		       	</EditText>

		       	<LinearLayout
		       	    android:id="@+id/linearLayout1"
		       	    android:layout_width="wrap_content"
		       	    android:layout_height="match_parent"
		       	    android:orientation="vertical" >
	
		  			<ImageView android:layout_height="40dp" android:id="@+id/img_verify" 
		  				android:layout_width="80dp" 
		  				android:background="@drawable/bg_verify"   
						android:layout_marginLeft="30dp"		
				  		android:layout_marginTop="12dp">
		  			</ImageView>
		       	</LinearLayout>
		       	
		      <!-- 	<LinearLayout  
			  	    android:layout_width="wrap_content" android:layout_height="wrap_content"
			  	    android:layout_marginLeft="50dp"
			  	    android:orientation="horizontal">-->
			  	    <ImageView android:id="@+id/btn_refurbish"
			  	        android:layout_height="60dp"
			  	        android:layout_width="100dp" 
			  	        android:focusable="true"
			  	   		android:clickable="true"
			  	   		android:layout_marginLeft="50dp"
			  	   		android:src="@drawable/refresh"/>
			  	   <!--  <TextView android:layout_width="wrap_content" 
			  	        android:layout_height="wrap_content"
			  	        android:focusable="true"
			  	        android:textColor="#02cafd"
			  	        android:textSize="30dp"
			  	        android:gravity="center_vertical"
			  	   		android:clickable="true"
			  	   		android:text="@string/Account_refurbish"/> -->
			  	<!--</LinearLayout>
			  	 <Button android:id="@+id/btn_refurbish" 
			  		android:layout_width="@dimen/SmallButtonWidth" android:layout_height="@dimen/SmallButtonHeight"
			  		android:text="@string/Account_refurbish"  
			  		style="@style/ButtonStyle"    
					android:layout_marginLeft="30dp">
			  	</Button> -->
	       	</LinearLayout>
	  		<LinearLayout android:layout_height="40dp" android:layout_width="wrap_content" 
	  			android:orientation="vertical">
	       		<TextView android:layout_width="wrap_content"	
	       			android:id="@+id/textVerify"
		  	        style="@style/TextSmallStyle"      		
	       			android:layout_height="wrap_content" />	 
	       	</LinearLayout>
			<Button android:id="@+id/btn_Declaration" 
			  		android:layout_width="@dimen/LargeButtonWidth" android:layout_height="@dimen/SmallButtonHeight"
			  		android:text="@string/Account_declaration"  
			  		style="@style/SettingButtonStyle"    
					android:layout_marginLeft="150dp">
			</Button>
	  		<LinearLayout android:layout_height="40dp" android:layout_width="wrap_content" 
	  			android:orientation="vertical">
	       		<TextView android:layout_width="421dp"	   
					android:layout_marginLeft="150dp"		
	       			android:layout_marginTop="5dp"
	       			android:id="@+id/textAgreement"
		  	        style="@style/TextSmallStyle"      		
	       			android:layout_height="wrap_content" />	 
	       	</LinearLayout>
			<Button android:id="@+id/btn_register" 
			  		android:layout_width="320dp" 
			  		android:layout_height="@dimen/MiddleButtonHeight"
			  		android:text="@string/Account_register_login"    
			  		android:enabled="false"
        			android:focusable="false"
        			android:alpha="0.7"
			  		style="@style/SettingButtonStyle"  
					android:layout_marginLeft="150dp">
			</Button>
		</LinearLayout>
	</LinearLayout>
 
</LinearLayout>

<RelativeLayout
	android:layout_height="172dp" 
	android:layout_width="1140dp"
	android:layout_centerVertical="true"
	android:background="@drawable/dlg_bg"
	android:id="@+id/toastLayout"
	android:visibility="invisible"
	>  
	 <LinearLayout android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_centerInParent="true">
		<TextView    
			android:id="@+id/toast_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"   
		    android:layout_marginLeft="10dp"
		    android:textColor="#bbbbbb"
		    android:textSize="35dp"       
		    android:singleLine="true"    
		    android:gravity="center"    
		/>
		<ImageView
		    android:id="@+id/toastImage"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@anim/loading"
		    android:visibility="visible"
		    android:layout_toRightOf="@id/toast_text"  
		/>    
		</LinearLayout>

</RelativeLayout>


</RelativeLayout>


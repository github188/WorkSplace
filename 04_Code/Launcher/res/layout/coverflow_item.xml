<?xml version="1.0" encoding="utf-8"?>
<com.joysee.launcher.common.CoverflowItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/launcher_coverflow_item_width"
    android:layout_height="@dimen/launcher_coverflow_item_height"
	>
    
    
    <ImageView 
        android:id="@+id/coverflow_item_pic"
        android:layout_width="@dimen/launcher_coverflow_item_pic_width"
        android:layout_height="@dimen/launcher_coverflow_item_pic_height"
        android:layout_gravity="center"
        />
    <ImageView 
        android:id="@+id/coverflow_item_pic_select"
        android:layout_width="@dimen/launcher_coverflow_item_pic_width"
        android:layout_height="@dimen/launcher_coverflow_item_pic_height"
        android:layout_gravity="center"
        />
    
    <TextView 
        android:id="@+id/coverflow_item_title"
        android:layout_width="@dimen/launcher_coverflow_item_title_width"
        android:layout_height="@dimen/launcher_coverflow_item_title_height"
        android:layout_marginTop="130dp"
        android:gravity="center_horizontal"
        android:textSize="35dp"
        android:textColor="@color/launcher_coverflow_item_textcolor"
        />

</com.joysee.launcher.common.CoverflowItem>
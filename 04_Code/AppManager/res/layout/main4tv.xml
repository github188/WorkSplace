<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/launcher_full_screen_width"
    android:layout_height="@dimen/launcher_full_screen_height"
    android:background="@drawable/joysee_launcher_bg"
    android:id="@+id/appmanager_main_rl"  > 
    <TextView android:id="@+id/app_title_id"
        android:layout_width="@dimen/launcher_full_screen_width"
        android:layout_height="@dimen/launcher_allapps_title_height"
        android:background="@drawable/launcher_allapps_page_title"
        android:paddingLeft="100dp"
        android:paddingTop="43dp"
        android:textSize="35dp"
        android:textColor="@color/launcher_allapps_title_textcolor"
        android:text="@string/app_title"
        android:layout_alignParentTop="true"
        />
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#00000000" 
	    android:layout_below="@id/app_title_id"
	    android:layout_alignParentBottom="true" > 
	    <GridView
	        android:id="@+id/gv_apps"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginBottom="50px"
	        android:layout_marginLeft="30px"
	        android:layout_marginRight="30px"
	        android:listSelector="@anim/record_icon_bg"
	        android:layout_marginTop="40px"
	        android:horizontalSpacing="20px" 
	        android:numColumns="6"
	        android:columnWidth="180dp"
	        android:verticalSpacing="10px" >
	    </GridView>  
	</RelativeLayout>
</RelativeLayout>
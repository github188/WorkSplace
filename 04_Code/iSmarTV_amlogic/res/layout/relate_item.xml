<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	>
	<com.ismartv.ui.widget.MovieItemView android:layout_x="0dp" android:layout_y="0dp"
		android:id="@+id/movie_view1" android:layout_width="326dp"
		android:layout_height="279dp" android:orientation="vertical"
		>
		<LinearLayout android:id="@+id/movie_bg"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical" android:gravity="center_horizontal">
			<ImageView android:id="@+id/movie_poster"
				android:layout_width="302dp" 
		        android:layout_height="201dp"
		        android:layout_marginTop="12dp"
		        android:scaleType="fitXY" 
				android:src="@drawable/default_poster" />
			<TextView android:id="@+id/movie_title"
				android:layout_width="302dp"  
		        android:layout_height="44dp"
		        android:layout_marginTop="12dp"
		        android:textColor="#f0f0f0"
		        android:textSize="35dp"
		        android:gravity="top|center_horizontal"
		        android:singleLine="true"
				android:ellipsize="marquee"
				android:marqueeRepeatLimit="marquee_forever"/>
		</LinearLayout>
	</com.ismartv.ui.widget.MovieItemView>

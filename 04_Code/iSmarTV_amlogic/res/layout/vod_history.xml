<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RootRelativeLayout"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@android:color/transparent"
	android:foreground="@android:color/transparent"
	>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:id="@+id/rootView"
    android:background="@drawable/vodbg">
		<LinearLayout android:layout_width="426dp"
			android:layout_height="match_parent" android:layout_marginLeft="0dp"
			android:layout_marginTop="0dp" android:orientation="vertical"
			android:background="@drawable/voditem_left">
			<TextView
			    android:layout_width="394dp" android:layout_height="87dp" 
			    android:layout_marginLeft="12dp" android:layout_marginTop="62dp"
				android:gravity="center_horizontal|top" android:textColor="#707896"
				android:textSize="72sp" android:includeFontPadding="false"
				android:text="@string/vod_movielist_title_history"/>
			<ScrollView android:id="@+id/secScrollView"
				android:layout_width="403dp" android:layout_height="800dp"
				android:layout_marginLeft="11dp" android:layout_marginTop="12dp" 
				android:scrollbars="vertical">
				<LinearLayout android:id="@+id/seclist"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:orientation="vertical">
				</LinearLayout>
			</ScrollView>		
		</LinearLayout>
     <AbsoluteLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"  	
    	> 
    	<ScrollView
    		android:id="@+id/itemScrollView"
			android:layout_x="0dp" android:layout_y="88dp" 
			android:layout_width="wrap_content" android:layout_height="999dp" 
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/itemlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>       
 	</AbsoluteLayout>  
</LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PlayerFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vodbg" >
   
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:gravity="center"  >
   
       <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal"  >
   
		  	<LinearLayout
			    android:layout_width="734dp"
			    android:layout_height="1080dp"
			    >    
			    <LinearLayout 
			        android:layout_width="564dp"
			    	android:layout_height="wrap_content"  
			   		android:layout_marginLeft="95dp"
			    	android:layout_marginTop="256dp" 
			    	android:orientation="vertical"
			    	>
			        <LinearLayout 
				        android:layout_width="fill_parent"
				        android:layout_height="60dp"
				        android:layout_marginBottom="31dp"
				        android:orientation="horizontal"
				        >
					    <TextView
					        android:id="@+id/itemtitle"
					        android:layout_width="283dp"
					        android:layout_height="fill_parent"
					        android:textSize="45dp"
					        android:textColor="@color/vod_onselect"
					        android:layout_gravity="bottom"
							android:singleLine="true"
					        android:ellipsize="marquee"
							android:marqueeRepeatLimit="marquee_forever"/>
				        <RatingBar
							android:id="@+id/ratingBar"
						    android:layout_width="wrap_content"
						    android:layout_height="28dp"
						    android:layout_marginLeft="25dp"
						    android:layout_marginRight="25dp"
						    android:layout_marginTop="20dp"
						    style="@style/vodRatingBar"
						    android:numStars="5"
						    android:stepSize="0.2"
							android:isIndicator="true" />
						
						<TextView
					        android:id="@+id/ratingaverage"
					        android:layout_width="wrap_content"
					        android:layout_height="36dp"
					        android:textSize="30dp"
					        android:layout_gravity="bottom"
					        android:textColor="@color/vod_onselect"/>	
			    	</LinearLayout>
			        <LinearLayout 
			            android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
			            android:orientation="vertical"
			            >
			            <ImageView
						    android:id="@+id/itemposter"
						    android:layout_width="562dp"
						    android:layout_height="316dp"
						    android:scaleType="fitXY"
						    android:src="@drawable/default_poster" />
			    
					    <Button
						    android:id="@+id/itemreplay"
						    android:layout_width="fill_parent"
						    android:layout_height="67dp"
						    android:background="@drawable/itemdetail_play"
						    android:textSize="35dp"
						    android:textColor="@color/vod_onselect"
						    android:gravity="center" />
			        </LinearLayout>
					<LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="70dp"
					    android:orientation="horizontal"
					    android:layout_marginTop="5dp" 
					    android:visibility="invisible">
					 	<Button
						    android:id="@+id/itembookmark"
						    android:layout_width="260dp"
						    android:layout_height="fill_parent"
						    android:background="@drawable/itemdetail_bookmark"
						    android:textSize="35dp"
						    android:textColor="@color/vod_unselect"
						    android:gravity="center_vertical"
						    android:paddingLeft="120dp"
						    /> 					    
					    
					    <Button
						    android:id="@+id/itemratingaverage"
						    android:layout_width="260dp"
						    android:layout_height="fill_parent"
						    android:layout_marginLeft="18dp"
						    android:background="@drawable/itemdetail_ratingaverage"
						    android:textSize="35dp"
						    android:textColor="@color/vod_unselect"
						    android:gravity="center_vertical"
						    android:paddingLeft="120dp"
						    />
				    
			    	</LinearLayout>  
			    </LinearLayout>  
				
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/ItemRelateLayout"
			    android:layout_width="1186dp"
			    android:layout_height="1080dp"
			    android:layout_marginLeft="0dp"
			    android:layout_marginTop="0dp"
			    android:layout_marginRight="0dp"
			    android:layout_marginBottom="0dp" >
			    <LinearLayout 
			        android:orientation="vertical"
			        android:layout_width="967dp"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="71dp"
			        >
			         <TextView
				        android:id="@+id/relatetitle"
				        android:layout_width="274dp"
				        android:layout_height="50dp"
					    android:layout_marginLeft="12dp"
					    android:layout_marginTop="98dp"	
					    android:layout_marginBottom="15dp"	        
				        android:textSize="40dp"
				        android:textColor="@color/vod_onselect" />
				  	    
					<GridView android:id="@+id/relate_gridview"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:numColumns="auto_fit"
						android:stretchMode="columnWidth"
						android:verticalSpacing="42dp"
						android:horizontalSpacing="72dp"
						android:columnWidth="200dp"
						android:listSelector="@drawable/vod_playerfinishrelateseletor" />
			        
			    </LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout> 

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"  >
	    
		<ImageView
		    android:id="@+id/leftmask"
		    android:layout_width="734dp"
		    android:layout_height="1080dp"
		    android:src="@drawable/vodplayfinishleftmask"
		    android:scaleType="fitXY" />
		    	    		    
		<ImageView
		    android:id="@+id/rightmask"
		    android:layout_width="1186dp"
		    android:layout_height="1080dp"
		    android:src="@drawable/vodplayfinishrightmask"
		    android:scaleType="fitXY" />						    	    
	    
	</LinearLayout>
	
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"  >
	    
		<LinearLayout
		    android:layout_width="753dp"
		    android:layout_height="fill_parent"
		    android:orientation="vertical" >
		</LinearLayout>
		    
		<LinearLayout
			android:orientation="vertical"
			android:id="@+id/BufferLayout" 
			android:layout_width="1170dp"
			android:layout_height="1080dp"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:foreground="@android:color/transparent"
			android:background="@android:color/transparent"
			android:visibility="invisible">
			<ImageView
				android:id="@+id/BufferImage"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@anim/loading"
				android:layout_centerInParent="true"
			/>
			<TextView
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:text="@string/vod_itemloading"
				android:textColor="@color/vod_onselect"
				android:gravity="center"
				android:textSize="40dp"
			/>
		</LinearLayout>			    					    	    
	    
	</LinearLayout>		

	<RelativeLayout
		android:id="@+id/successlayout"
		android:orientation="vertical"	
		android:layout_width="1920dp"
		android:layout_height="267dp"
		android:layout_alignParentBottom="true"
		android:gravity="center"
		android:background="@drawable/ratingbarmenubg"
		android:visibility="gone"
		>	
			<TextView
				android:id="@+id/PopupRateText" 
				android:layout_width="1920dp" 
				android:layout_height="75dp"				
				android:layout_centerInParent="true"
				android:gravity="center"
				android:textSize="50dp"
				android:textColor="@color/vod_ratepopup_dlg"
			/>
	</RelativeLayout>	
</RelativeLayout>
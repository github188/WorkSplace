<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.ismartv.ui.widget.MovieItemView
        android:id="@+id/movie_view1"
        android:layout_width="340dp"
        android:layout_height="310dp"
        android:layout_x="47dp"
        android:layout_y="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/movie_bg"
            android:layout_width="312dp"
            android:layout_height="310dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="288dp"
                android:layout_height="191dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/voditem_shade"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_poster" />

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal|top"
                android:includeFontPadding="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/vod_movieitem_nosel"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/movie_comment"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal|top"
                android:includeFontPadding="false"
                android:textColor="#b4f0f0f0"
                android:textSize="25sp" />
        </LinearLayout>
    </com.ismartv.ui.widget.MovieItemView>


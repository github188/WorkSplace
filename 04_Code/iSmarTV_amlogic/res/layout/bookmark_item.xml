				android:textSize="35sp" android:includeFontPadding="false" 
                android:ellipsize="marquee" android:focusableInTouchMode="true" 
			    android:marqueeRepeatLimit="marquee_forever"/>
			<TextView android:id="@+id/movie_comment"
				android:layout_width="288dp" android:layout_height="wrap_content"
				android:layout_marginTop="12dp" android:layout_marginLeft="12dp"
				android:gravity="center_horizontal|top" android:textColor="#b4f0f0f0"
				android:textSize="25sp" android:includeFontPadding="false"/>

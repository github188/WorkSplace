	<com.ismartv.ui.widget.MovieItemView android:layout_x="47dp" android:layout_y="0dp"
		android:id="@+id/movie_view1" android:layout_width="340dp"
		android:layout_height="303dp" android:orientation="vertical">
		<LinearLayout android:id="@+id/movie_bg"
			android:layout_width="312dp" android:layout_height="289dp"

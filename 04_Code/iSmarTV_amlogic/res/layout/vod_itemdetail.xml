<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ItemdetailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vodbg" >
       
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:gravity="center"  >
   
       <LinearLayout
		    android:layout_width="1980px"
		    android:layout_height="1000px"
		    android:orientation="horizontal"  >
   
		  	<LinearLayout
			    android:layout_width="1402px"
			    android:layout_height="1000px"
			    android:orientation="vertical" >    
			        
			  	<LinearLayout
				    android:layout_width="1402px"
				    android:layout_height="450px"
				    android:orientation="horizontal"
				    android:layout_marginTop="116px" >
				    
					<LinearLayout
					    android:layout_width="641px"
					    android:layout_height="450px"
					    android:orientation="vertical"
					    android:layout_marginLeft="8px"
					    android:layout_marginTop="0px"
					    android:layout_marginRight="40px"
					    android:layout_marginBottom="0px" >
					    <LinearLayout 
					        android:layout_width="490px"
					        android:layout_height="70px"
					        android:background="@drawable/vod_detail_title_bg"
					        >
					    <TextView
					        android:id="@+id/itemtitle"
					        android:layout_width="fill_parent"
					        android:layout_height="70px"
					        android:textSize="45px"
					        android:textColor="@color/vod_itemdetail_firsttextcolor"
					        android:layout_marginLeft="95px"
					        android:gravity="center_vertical"
							android:singleLine="true"
					        android:ellipsize="marquee"
							android:marqueeRepeatLimit="marquee_forever"/>
						</LinearLayout>
					    <TextView
					        android:id="@+id/itemattrs"
					        android:layout_width="fill_parent"
					        android:layout_height="350px"
					        android:textSize="30px"
					        android:textColor="@color/vod_itemdetail_firsttextcolor"
					        android:layout_marginTop="30px"
					        android:layout_marginLeft="98px"
					        android:layout_marginBottom="15px"
							android:ellipsize="end"
					        android:lines="6"
					        android:lineSpacingExtra="24px" />
				    </LinearLayout>
				    
					<LinearLayout
					    android:layout_width="681px"
					    android:layout_height="450px"
					    android:orientation="vertical"
					    android:layout_marginLeft="100px"
					    android:layout_marginTop="0px"
					    android:layout_marginRight="100px"
					    android:layout_marginBottom="0px" >
					    
					    <LinearLayout
						    android:layout_width="550px"
						    android:layout_height="32px"
						    android:orientation="horizontal"
						    android:gravity="center_vertical"
						    android:layout_marginBottom="15px"
						     >
							<RatingBar
								android:id="@+id/ratingBar"
							    android:layout_width="wrap_content"
							    android:layout_height="32px"
							    style="@style/vodRatingBar"
							    android:numStars="5"
							    android:stepSize="0.2"
								android:gravity="center_vertical"
								android:isIndicator="true" />
							<TextView
						        android:id="@+id/ratingaverage"
						        android:layout_width="60px"
						        android:layout_height="32px"
						        android:textSize="30px"
						        android:textColor="@color/vod_itemdetail_firsttextcolor"
						        android:layout_marginLeft="18px" />	
						        
							<TextView
					        android:id="@+id/itemexpense"
					        android:layout_width="104px"
					        android:layout_height="32px"
					        android:gravity="center"
					        android:background="@drawable/freecharge"
					        android:textSize="24px"
					        android:textColor="@color/vod_itemdetail_firsttextcolor"
					        />
						</LinearLayout>
					    
					    <ImageView
						    android:id="@+id/itemposter"
						    android:layout_width="482px"
						    android:layout_height="270px"
						    android:scaleType="fitXY"
						    android:src="@drawable/default_poster" />
					    
						<LinearLayout
						    android:layout_width="482px"
						    android:layout_height="72px"
						    android:orientation="horizontal" >	
						    			    
						    <Button
							    android:id="@+id/itemplay"
							    android:layout_width="241px"
							    android:layout_height="72px"
							    android:background="@drawable/itemdetail_play_left"
							    android:textSize="35px"
							    android:textColor="@color/vod_itemdetail_firsttextcolor"
							    android:gravity="center" 
							    android:visibility="gone"/>
	
						    <Button
							    android:id="@+id/itemepisode"
							    android:layout_width="241px"
							    android:layout_height="72px"
							    android:background="@drawable/itemdetail_play_right"
							    android:textSize="35px"
							    android:textColor="@color/vod_itemdetail_firsttextcolor"
							    android:gravity="center" 
							    android:visibility="gone"/>						    
							    
						</LinearLayout>    
					    
						<LinearLayout
						    android:layout_width="482px"
						    android:layout_height="69px"
						    android:orientation="horizontal" >
						    
						 	<Button
							    android:id="@+id/itembookmark"
							    android:layout_width="186px"
							    android:layout_height="69px"
							    android:layout_marginLeft="60px"
							    android:visibility="gone"
							    android:background="@drawable/itemdetail_bookmark"
							    android:textSize="35px"
								android:paddingTop="5px"
							    android:textColor="@color/vod_itemdetail_firsttextcolor"
							    android:gravity="top|right"
							    /> 					    
						    
						    <Button
							    android:id="@+id/itemratingaverage"
							    android:layout_width="179px"
							    android:layout_height="69px"
							    android:layout_marginLeft="0px"
							    android:visibility="gone"
							    android:background="@drawable/itemdetail_ratingaverage"
							    android:textSize="35px"
								android:paddingTop="5px"
							    android:textColor="@color/vod_itemdetail_firsttextcolor"
							    android:gravity="top|right"
							    />
						    
	  
						    
					    </LinearLayout>		    
					    
				    </LinearLayout>
			        
			    </LinearLayout>
				
			  	<LinearLayout
				    android:layout_width="1182px"
				    android:layout_height="320px"
				    android:orientation="vertical"
				    android:layout_marginLeft="91px"
				    android:layout_marginTop="0px"
				    android:layout_marginRight="40px"
				    android:layout_marginBottom="140px" >
				    			
					<TextView
				        android:id="@+id/itemdescriptiontitle"
				        android:layout_width="200px"
				        android:layout_height="40px"
				        android:textSize="35px"
				        android:textColor="@color/vod_itemdetail_secondtextcolor" />
					
					<TextView
				        android:id="@+id/itemdescriptioninfo"
				        android:layout_width="1182px"
				        android:layout_height="287px"		        
					    android:layout_marginTop="23px"
					    android:layout_marginBottom="23px"
						android:layout_marginLeft="9px"
						android:layout_marginRight="9px"
						android:paddingTop="23px"
						android:paddingBottom="23px"
						android:paddingLeft="10px"
						android:paddingRight="10px"
					    android:text="@string/vod_itemtextnone"			        
				        android:textSize="35px"
				        android:textColor="@color/vod_itemdetail_firsttextcolor"
				        android:background="@drawable/itemdesbg"
				        android:gravity="top"
						android:lines="4"
						android:lineSpacingExtra="17px"
				        android:ellipsize="end" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
			android:id="@+id/ItemRelateLayout"
		    android:layout_width="618px"
		    android:layout_height="1000px"
		    android:orientation="vertical"
		    android:layout_marginTop="73px"
		    android:layout_marginRight="100px"
		    android:layout_marginBottom="65px" 
			>
		    
		    <TextView
		        android:id="@+id/relatetitle"
		        android:layout_width="200px"
		        android:layout_height="48px"
				android:layout_marginLeft="10px"
		        android:textSize="40px"
		        android:textColor="@color/vod_itemdetail_firsttextcolor" />
		        
			<ImageView
			    android:id="@+id/relatetitlebar"
			    android:layout_width="1064px"
			    android:layout_height="5px"		    
				android:layout_marginLeft="10px"
			    android:background="@drawable/vodplayfinishrelatebar" />		        
		    
		  	<ListView
		  	    android:id="@+id/relatelist"
		  	    android:layout_width="618px"
		  	    android:layout_height="668px"
				android:divider="#00ffffff"
				android:dividerHeight="0dp"
		  	    android:listSelector="@drawable/itemdetailrelatelistseletor" >
		  	</ListView>	
		     	
			    	
		  	<Button
		  	    android:id="@+id/morerelate"
		  	    android:layout_width="247px"
		  	    android:layout_height="68px"
		  	    android:layout_marginLeft="10px"
		  	    android:background="@drawable/morerelate"
		  	    android:scaleType="fitXY" />

		  	    
	  	</LinearLayout>

		</LinearLayout>
	</LinearLayout> 

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"  >
	    
		<ImageView
		    android:id="@+id/leftmask"
		    android:layout_width="1282px"
		    android:layout_height="1080px"
		    android:src="@drawable/itemdetailrelatebgnormal"
		    android:scaleType="fitXY" />
		<ImageView 
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:src="@drawable/vod_detail_mid_line"
			    />
		<ImageView
		    android:id="@+id/rightmask"
		    android:layout_width="638px"
		    android:layout_height="1080px"
		    android:src="@drawable/itemdetailrelatebgnormal" />						    	    
	    
	</LinearLayout>
	
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"  >
	    
		<LinearLayout
		    android:layout_width="1282px"
		    android:layout_height="1080px"
			android:layout_marginTop="30px"
			android:layout_marginLeft="40px"
		    android:orientation="vertical" >
		    
		    <LinearLayout
			    android:layout_width="670px"
			    android:layout_height="156px"
			    android:orientation="horizontal"
			    android:background="@drawable/vodwatermark" >
			</LinearLayout> 		    
		</LinearLayout>
		    
		<LinearLayout
			android:id="@+id/rightBufferLayout"
			android:orientation="vertical"			
			android:layout_width="638px"
			android:layout_height="1080px"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:foreground="@android:color/transparent"
			android:background="@android:color/transparent"
			android:visibility="invisible">
			<ImageView
				android:id="@+id/rightBufferImage"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@anim/loading"
				android:layout_centerInParent="true"
			/>
			<TextView
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:text="@string/vod_itemloading"
				android:gravity="center"
				android:textSize="30px"
			/>
		</LinearLayout>			    					    	    
	    
	</LinearLayout>		
	<RelativeLayout
		android:id="@+id/successlayout"
		android:orientation="vertical"	
		android:layout_width="1920px"
		android:layout_height="267px"
		android:layout_alignParentBottom="true"
		android:gravity="center"
		android:background="@drawable/ratingbarmenubg"
		android:visibility="gone"
		>	
			<TextView
				android:id="@+id/PopupRateText" 
				android:layout_width="1920px" 
				android:layout_height="75px"				
				android:layout_centerInParent="true"
				android:gravity="center"
				android:textSize="50px"
				android:textColor="@color/vod_ratepopup_dlg"
			/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/BufferLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/vodbg"
		android:visibility="invisible"		
	>

		<LinearLayout
		    android:layout_width="1282px"
		    android:layout_height="1080px"
			android:layout_marginTop="30px"
			android:layout_marginLeft="40px"
		    android:orientation="vertical" >
		    
		    <LinearLayout
			    android:layout_width="670px"
			    android:layout_height="156px"
			    android:orientation="horizontal"
			    android:background="@drawable/vodwatermark" >
			</LinearLayout> 		    
		</LinearLayout>	
		<ImageView android:id="@+id/BufferBGImage"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/toast_bg" android:layout_centerInParent="true" />	
		<LinearLayout
			android:orientation="vertical"			
			android:layout_width="638px"
			android:layout_height="1080px"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:foreground="@android:color/transparent"
			android:background="@android:color/transparent"
			>
			<ImageView
				android:id="@+id/BufferImage"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@anim/loading"
				android:layout_centerInParent="true"
			/>
			<TextView
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:text="@string/vod_itemloading"
				android:gravity="center"
				android:textSize="30px"
			/>
		</LinearLayout>			    					    	    
	</RelativeLayout>
</RelativeLayout>
	
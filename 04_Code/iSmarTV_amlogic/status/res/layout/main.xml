<?xml version="1.0" encoding="utf-8"?>  
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_x="0px"
  android:layout_y="0px"
  android:layout_width="1800px"
  android:layout_height="180px">
  	
  
	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40px"
  			android:layout_y="40px"
				android:orientation="horizontal"
    >  

	 <TextView  
        android:id="@+id/where"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="45px"
        android:layout_marginLeft="12px"
        />
     <TextView  
        android:id="@+id/date"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="30px"
        android:layout_marginLeft="12px"
        /> 
     <TextView  
        android:id="@+id/week"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="30px"
        android:layout_marginLeft="12px"
		/>   

         <ImageView  
        android:id="@+id/phenomenon_icon"  
        android:layout_height="40px"  
        android:layout_width="40px"
        android:layout_gravity="center_vertical" 
        android:layout_marginLeft="2px"
      	/>  

      	<ImageView  
        android:id="@+id/phenomenon_icon_next"  
        android:layout_height="40px"  
        android:layout_width="40px"
        android:layout_gravity="center_vertical" 
        android:layout_marginLeft="2px"
      	/>  

	 <TextView  
        android:id="@+id/temperature"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="30px"
        android:layout_marginLeft="12px"
        /> 

	 <TextView  
        android:id="@+id/phenomenon_text"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="30px"
        android:layout_marginLeft="12px"
        />   

	<TextView  
        android:id="@+id/wind_direction"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="30px"
        />   

        <TextView  
        android:id="@+id/wind_power"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="30px"
        />   
		
	</LinearLayout> 

	<LinearLayout
		android:layout_x="1110px" 
		android:layout_y="52px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
         >  

		<ImageView  
	        android:id="@+id/sderror_icon"  
	        android:layout_height="38px"  
	        android:layout_width="38px"
	        android:layout_alignParentBottom="true" 
	        android:layout_marginLeft="2px"
	      	/>

	     <ImageView  
	        android:id="@+id/eth_connect_icon" 
	        android:layout_height="38px"  
	        android:layout_width="38px"
		android:layout_alignParentBottom="true" 
	        android:layout_marginLeft="12px"
	        android:src="@drawable/ethernet_disconnected"
	      	/> 
	</LinearLayout> 
	
	<LinearLayout
		android:layout_x="1260px"
		android:layout_y="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:orientation="horizontal"
    	>  
   	      	
	<TextView  
	        android:id="@+id/data_dis"  
	        android:layout_width="350px"
	        android:layout_height="wrap_content"
	        android:textSize="30px"
	        android:layout_alignParentBottom="true" 
	        android:layout_marginLeft="12px"
        /> 	
	      	
	  
	<TextView  
	        android:id="@+id/digital_clock"  
	        android:layout_width="wrap_content"
	        android:layout_height="50px"
	         android:textSize="42px"
	        android:layout_alignParentBottom="true" 
	        android:textColor="@android:color/white"
	        android:layout_marginLeft="12px"
        /> 	
      <!--
	<com.ex.view.DigitalClock
            android:layout_marginLeft="12px"
            android:layout_alignParentBottom="true" 
            android:textColor="@android:color/white"
            android:textSize="42px"
            android:shadowColor="@android:color/white"
            android:shadowRadius="2.0"
            android:layout_width="120px"
            android:layout_height="50px"
            />
	-->
 </LinearLayout>	
      
</AbsoluteLayout>	   
